{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Description": "Test ECS DiskAttachment„ÄÅSnapshot",
  "Parameters": {
    "SnapshotName": {
      "Type": "String",
      "Default": "mytest"
    },
    "ImageId": {
      "Type": "String",
      "Description": "Image Id, represents the image resource to startup one ECS instance, <a href='#/product/cn-beijing/list/imageList' target='_blank'>View image resources</a>",
      "Label": "ECS Image Id",
      "Default": "centos_7"
    },
    "InstanceType": {
      "Default": "ecs.c5.large",
      "Type": "String",
      "Label": "ECS Instance Type",
      "Description": "The ECS instance type, <a href='#/product/cn-beijing/list/typeList' target='_blank'>View instance types</a>"
    },
    "LoginPassword": {
      "NoEcho": true,
      "Type": "String",
      "Description": "ECS Login Password",
      "MinLength": 8,
      "MaxLength": 41,
      "Default": "Admin123"
    },
    "ZoneId": {
      "Type": "String",
      "Description": "Zone Id."
    },
    "VpcId": {
      "Type": "String",
      "Description": "VPC Id."
    },
    "VSwitchId": {
      "Type": "String",
      "Description": "VSW Id."
    },
    "SecurityGroupId": {
      "Type": "String",
      "Description": "Security Group Id."
    },
    "InstanceName": {
      "Type": "String",
      "Description": "Instance Name",
      "Default": "mytest"
    },
    "Device": {
      "Type": "String",
      "Description": "The device where the volume is exposed on the instance. could be /dev/xvd[a-z]. If not specification, will use default value."
    },
    "DiskCategory": {
      "Type": "String",
      "Description": "The disk category, now support cloud/cloud_ssd/cloud_essd/cloud_efficiency/san_ssd/san_efficiency, depends the region.",
      "AllowedValues": [
        "cloud",
        "cloud_ssd",
        "cloud_essd",
        "cloud_efficiency"
      ]
    },
    "Size": {
      "Type": "Number",
      "Description": "The size of the disk unit in GB.",
      "MaxValue": 2000,
      "MinValue": 5
    }
  },
  "Resources": {
    "DiskAttachment": {
      "Type": "ALIYUN::ECS::DiskAttachment",
      "Properties": {
        "InstanceId": {
          "Ref": "Instance"
        },
        "Device": {
          "Ref": "Device"
        },
        "DeleteWithInstance": "true",
        "DiskId": {
          "Ref": "Disk"
        }
      }
    },
    "Disk": {
      "Type": "ALIYUN::ECS::Disk",
      "Properties": {
        "ZoneId": {
          "Ref": "ZoneId"
        },
        "Size": {
          "Ref": "Size"
        },
        "DiskCategory": {
          "Ref": "DiskCategory"
        }
      }
    },
    "Snapshot": {
      "DependsOn": "DiskAttachment",
      "Type": "ALIYUN::ECS::Snapshot",
      "Properties": {
        "SnapshotName": {
          "Ref": "SnapshotName"
        },
        "Description": "Test ECS Snapshot",
        "DiskId": {
          "Ref": "Disk"
        }
      }
    },
    "Instance": {
      "Type": "ALIYUN::ECS::Instance",
      "Properties": {
        "InstanceName": {
          "Ref": "InstanceName"
        },
        "IoOptimized": "optimized",
        "VpcId": {
          "Ref": "VpcId"
        },
        "VSwitchId": {
          "Ref": "VSwitchId"
        },
        "SecurityGroupId": {
          "Ref": "SecurityGroupId"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "AllocatePublicIP": false,
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "SystemDiskCategory": "cloud_efficiency",
        "Password": {
          "Ref": "LoginPassword"
        }
      }
    }
  },
  "Outputs": {
    "SnapshotId": {
      "Value": {
        "Fn::GetAtt": [
          "Snapshot",
          "SnapshotId"
        ]
      }
    },
    "Status": {
      "Description": "The disk status now.",
      "Value": {
        "Fn::GetAtt": [
          "DiskAttachment",
          "Status"
        ]
      }
    },
    "Device": {
      "Description": "The device where the volume is exposed on ecs instance.",
      "Value": {
        "Fn::GetAtt": [
          "DiskAttachment",
          "Device"
        ]
      }
    },
    "DiskId": {
      "Description": "The disk id of created disk",
      "Value": {
        "Fn::GetAtt": [
          "DiskAttachment",
          "DiskId"
        ]
      }
    }
  }
}