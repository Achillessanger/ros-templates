{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Description": "Test ECS HpcCluster",
  "Parameters": {
    "Name": {
      "Type": "String",
      "Default": "mytest"
    }
  },
  "Resources": {
    "HpcCluster": {
      "Type": "ALIYUN::ECS::HpcCluster",
      "Properties": {
        "Name": {
          "Ref": "Name"
        },
        "Description": "Test HpcCluster"
      }
    }
  },
  "Outputs": {
    "HpcClusterId": {
      "Value": {
        "Fn::GetAtt": [
          "HpcCluster",
          "HpcClusterId"
        ]
      }
    },
    "Name": {
      "Value": {
        "Fn::GetAtt": [
          "HpcCluster",
          "Name"
        ]
      }
    }
  }
}