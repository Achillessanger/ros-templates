{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Description": "Test ECS InstanceGroup、InstanceGroupClone、Command、Invocation",
  "Parameters": {
    "Name": {
      "Type": "String"
    },
    "CommandContent": {
      "Type": "String"
    },
    "Type": {
      "Type": "String"
    },
    "ImageId": {
      "Type": "String",
      "Description": "Image Id, represents the image resource to startup one ECS instance, <a href='#/product/cn-beijing/list/imageList' target='_blank'>View image resources</a>",
      "Label": "ECS Image Id",
      "Default": "centos_7"
    },
    "InstanceType": {
      "Default": "ecs.c5.large",
      "Type": "String",
      "Label": "ECS Instance Type",
      "Description": "The ECS instance type, <a href='#/product/cn-beijing/list/typeList' target='_blank'>View instance types</a>"
    },
    "LoginPassword": {
      "NoEcho": true,
      "Type": "String",
      "Description": "ECS Login Password",
      "MinLength": 8,
      "MaxLength": 41
    },
    "PublicIp": {
      "Type": "Boolean",
      "Description": "Allocate Public IP or Not",
      "Label": "Allocate Public IP or Not",
      "Default": false
    },
    "VpcId": {
      "Type": "String",
      "Description": "VPC Id."
    },
    "VSwitchId": {
      "Type": "String",
      "Description": "VSW Id."
    },
    "SecurityGroupId": {
      "Type": "String",
      "Description": "Security Group Id."
    },
    "InstanceName": {
      "Type": "String",
      "Description": "Instance Name",
      "Default": "mytest"
    },
    "MaxAmount": {
      "Type": "Number",
      "Description": "Instance Amount",
      "Default": 2
    }
  },
  "Resources": {
    "InstanceGroup": {
      "Type": "ALIYUN::ECS::InstanceGroup",
      "Properties": {
        "InstanceName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "InstanceName"
              },
              "-[1,6]"
            ]
          ]
        },
        "IoOptimized": "optimized",
        "VpcId": {
          "Ref": "VpcId"
        },
        "VSwitchId": {
          "Ref": "VSwitchId"
        },
        "SecurityGroupId": {
          "Ref": "SecurityGroupId"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "AllocatePublicIP": {
          "Ref": "PublicIp"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "SystemDiskCategory": "cloud_efficiency",
        "Password": {
          "Ref": "LoginPassword"
        },
        "MaxAmount": {
          "Ref": "MaxAmount"
        }
      }
    },
    "InstanceClone": {
      "DependsOn": "InstanceGroup",
      "Type": "ALIYUN::ECS::InstanceGroupClone",
      "Properties": {
        "SourceInstanceId": {
          "Fn::Select": [
            0,
            {
              "Fn::GetAtt": [
                "InstanceGroup",
                "InstanceIds"
              ]
            }
          ]
        },
        "MaxAmount": {
          "Ref": "MaxAmount"
        }
      }
    },
    "Command": {
      "Type": "ALIYUN::ECS::Command",
      "Properties": {
        "Name": {
          "Ref": "Name"
        },
        "CommandContent": {
          "Ref": "CommandContent"
        },
        "Type": {
          "Ref": "Type"
        }
      }
    },
    "Invocation": {
      "Type": "ALIYUN::ECS::Invocation",
      "Properties": {
        "CommandId": {
          "Ref": "Command"
        },
        "InstanceIds": {
          "Fn::GetAtt": [
            "InstanceGroup",
            "InstanceIds"
          ]
        }
      }
    }
  },
  "Outputs": {
    "InstanceIdsClone": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceClone",
          "InstanceIds"
        ]
      }
    },
    "PrivateIpsClone": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceClone",
          "PrivateIps"
        ]
      }
    },
    "PublicIps": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceClone",
          "PublicIps"
        ]
      }
    },
    "HostNames": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceClone",
          "HostNames"
        ]
      }
    },
    "ZoneIds": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceClone",
          "ZoneIds"
        ]
      }
    },
    "InvokeId": {
      "Value": {
        "Fn::GetAtt": [
          "Invocation",
          "InvokeId"
        ]
      }
    },
    "CommandId": {
      "Value": {
        "Fn::GetAtt": [
          "Command",
          "CommandId"
        ]
      }
    },
    "InstanceIds": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceGroup",
          "InstanceIds"
        ]
      }
    },
    "PrivateIps": {
      "Value": {
        "Fn::GetAtt": [
          "InstanceGroup",
          "PrivateIps"
        ]
      }
    }
  }
}
