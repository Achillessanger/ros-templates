{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Description": "Test ESS ScalingConfiguration„ÄÅScalingGroupEnable",
  "Parameters": {
    "VpcId": {
      "Type": "String",
      "Description": "VPC Id."
    },
    "VSwitchId": {
      "Type": "String",
      "Description": "VSW Id."
    },
    "SecurityGroupId": {
      "Type": "String",
      "Description": "Security Group Id."
    },
    "ScalingConfigurationName": {
      "Type": "String",
      "Default": "mytest"
    },
    "Password": {
      "Type": "String"
    },
    "SystemDiskSize": {
      "Type": "Number",
      "Default": 100
    },
    "SystemDiskCategory": {
      "Type": "String",
      "Default": "cloud_efficiency"
    },
    "InstanceType": {
      "Type": "String",
      "Default": "ecs.c5.large"
    },
    "ImageId": {
      "Type": "String",
      "Default": "centos_7_04_64_20G_alibase_201701015.vhd"
    }
  },
  "Resources": {
    "ScalingConfiguration": {
      "Type": "ALIYUN::ESS::ScalingConfiguration",
      "DependsOn": "ScalingGroup",
      "Properties": {
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "SystemDiskCategory": {
          "Ref": "SystemDiskCategory"
        },
        "SystemDiskSize": {
          "Ref": "SystemDiskSize"
        },
        "ScalingConfigurationName": {
          "Ref": "ScalingConfigurationName"
        },
        "ScalingGroupId": {
          "Ref": "ScalingGroup"
        },
        "SecurityGroupId": {
          "Ref": "SecurityGroupId"
        }
      }
    },
    "ScalingGroup": {
      "Type": "ALIYUN::ESS::ScalingGroup",
      "Properties": {
        "MaxSize": 3,
        "MinSize": 0,
        "DefaultCooldown": 15,
        "VpcId": {
          "Ref": "VpcId"
        },
        "VSwitchId": {
          "Ref": "VSwitchId"
        }
      }
    },
    "InstanceGroup": {
      "Type": "ALIYUN::ECS::InstanceGroup",
      "Properties": {
        "IoOptimized": "optimized",
        "VpcId": {
          "Ref": "VpcId"
        },
        "VSwitchId": {
          "Ref": "VSwitchId"
        },
        "SecurityGroupId": {
          "Ref": "SecurityGroupId"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "AllocatePublicIP": false,
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "SystemDiskCategory": "cloud_efficiency",
        "Password": {
          "Ref": "Password"
        },
        "MaxAmount": 3
      }
    },
    "ScalingRule": {
      "DependsOn": "ScalingGroup",
      "Type": "ALIYUN::ESS::ScalingRule",
      "Properties": {
        "AdjustmentType": "QuantityChangeInCapacity",
        "ScalingGroupId": {
          "Fn::GetAtt": [
            "ScalingGroup",
            "ScalingGroupId"
          ]
        },
        "AdjustmentValue": 10
      }
    },
    "ScalingGroupEnable": {
      "Type": "ALIYUN::ESS::ScalingGroupEnable",
      "Properties": {
        "ScalingConfigurationId": {
          "Ref": "ScalingConfiguration"
        },
        "ScalingGroupId": {
          "Ref": "ScalingGroup"
        },
        "InstanceIds": {
          "Fn::GetAtt": [
            "InstanceGroup",
            "InstanceIds"
          ]
        },
        "ScalingRuleAris": [
          {
            "Fn::GetAtt": [
              "ScalingRule",
              "ScalingRuleAri"
            ]
          }
        ],
        "ScalingRuleArisExecuteVersion": 0
      }
    }
  },
  "Outputs": {
    "ScalingInstanceDetails": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingInstanceDetails"
        ]
      },
      "Description": "Detail information of auto created scaling instances"
    },
    "ScalingRuleArisExecuteResultNumberOfAddedInstances": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingRuleArisExecuteResultNumberOfAddedInstances"
        ]
      },
      "Description": "The number of added vm via the execution of scaling rule aris"
    },
    "ScalingRuleArisExecuteErrorInfoScalingRuleArisExecuteErrorInfo": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingRuleArisExecuteErrorInfo"
        ]
      },
      "Description": "The error info of the execution of scaling rule aris"
    },
    "ScalingGroupId": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingGroupId"
        ]
      },
      "Description": "The scaling group id"
    },
    "ScalingRuleArisExecuteResultInstancesRemoved": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingRuleArisExecuteResultInstancesRemoved"
        ]
      },
      "Description": "Instances removed via the execution of scaling rule aris"
    },
    "ScalingInstances": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingInstances"
        ]
      },
      "Description": "The auto created scaling instances"
    },
    "LifecycleState": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "LifecycleState"
        ]
      },
      "Description": "The scaling group status"
    },
    "ScalingRuleArisExecuteResultInstancesAdded": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingGroupEnable",
          "ScalingRuleArisExecuteResultInstancesAdded"
        ]
      },
      "Description": "Instances added via the execution of scaling rule aris"
    },
    "ScalingConfigurationId": {
      "Description": "The scaling configuration id",
      "Value": {
        "Fn::GetAtt": [
          "ScalingConfiguration",
          "ScalingConfigurationId"
        ]
      }
    },
    "ScalingRuleAri": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingRule",
          "ScalingRuleAri"
        ]
      }
    },
    "ScalingRuleId": {
      "Value": {
        "Fn::GetAtt": [
          "ScalingRule",
          "ScalingRuleId"
        ]
      }
    }
  }
}
